<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/cardview_default_margin"
    android:layout_marginRight="@dimen/cardview_default_margin"
    android:layout_marginTop="@dimen/cardview_default_margin"
    android:layout_marginBottom="@dimen/cardview_default_margin"
    card_view:cardCornerRadius="@dimen/cardview_default_margin"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    android:elevation="@dimen/card_list_content_elevation"
    android:padding="@dimen/card_list_content_padding">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/card_list_content_padding">

        <ImageView android:id="@+id/card_list_content_thumb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/cardview_default_margin"
            android:gravity="center_vertical"/>

        <TextView android:id="@+id/card_list_content_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/card_list_content_name"
            android:layout_toRightOf="@id/card_list_content_thumb"/>

        <TextView android:id="@+id/card_list_content_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_list_content_name"
            android:layout_toRightOf="@id/card_list_content_thumb"/>

        <TextView android:id="@+id/card_list_content_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_list_content_company"
            android:layout_toRightOf="@id/card_list_content_thumb"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>